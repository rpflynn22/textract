<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DetailsActivity" > 
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/overallContainer"
        android:layout_marginBottom="20dp" >
        
        <ImageView 
            android:layout_alignParentLeft="true"
            android:layout_height="55dp"
            android:layout_width="55dp"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/very_good_icon"
            android:id="@+id/overallImage"
            />
        
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:text="-9.5"
            android:id="@+id/overallScoreText"
            />
        
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@+id/overallScoreText"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:text="Relationship Value: "
            />
        
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_below="@+id/overallContainer" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inboxContainer"
        android:layout_marginBottom="15dp">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textSize="17sp"
            android:text="Received Value: "
            android:id="@+id/receivedVal"
            />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/inboxImage"
            android:layout_centerVertical="true"
            android:textSize="17sp"
            android:id="@+id/inboxValText"
            android:layout_marginRight="12dp"
            android:text="2.3"
            />
        
        <ImageView 
            android:layout_alignParentRight="true"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/very_good_icon"
            android:id="@+id/inboxImage"
            />
        
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_below="@+id/inboxContainer" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sentContainer">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textSize="17sp"
            android:text="Sent Value: "
            android:id="@+id/sentVal"
            />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/sentImage"
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true"
            android:textSize="17sp"
            android:id="@+id/sentValText"
            android:text="2.3"
            />
        
        <ImageView 
            android:layout_alignParentRight="true"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/very_good_icon"
            android:id="@+id/sentImage"
            />
        
    </RelativeLayout>

    <Button
        android:id="@+id/sendApology"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:background="#B0E2FF"
        android:textSize="20sp"
        android:src="@drawable/ic_launcher" />
  
</RelativeLayout>